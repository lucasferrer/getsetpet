<!DOCTYPE html>
<html lang="pt-br">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">
  <title><%= title %></title>

  <% include Shared/callcss %>

</head>

<body id="page-top">

  <% include Shared/header %>

  <!-- Begin Page Content -->
  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>


    <!-- Content Row -->

    <div class="row">


      <!-- Area Chart -->
      <div class="col-xl-8 col-lg-7">
        <div class="card shadow mb-4">
          <!-- Card Header - Dropdown -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Ocorrencias</h6>
            <div class="dropdown no-arrow">
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            <div class="chart-container" style="position: relative; height:45vh; width:100%">
              <canvas id="chartHistoricoStatus" class="canvasGraph"></canvas>
            </div>
          </div>
        </div>
      </div>

      <!-- Pie Chart -->
      <div class="col-xl-4 col-lg-5">
        <div class="card shadow mb-4">
          <!-- Card Header - Dropdown -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Resumo</h6>
            <div class="dropdown no-arrow" style="display: none">
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            <div class="chart-container" style="position: relative; height:40vh; width:100%">
              <canvas id="myPieChart"></canvas>
            </div>
            <div class="mt-4 text-center small">
              <span class="mr-2">
                <i class="fas fa-circle" style="color: #e74a3b"></i> Critico
              </span>
              <span class="mr-2">
                <i class="fas fa-circle" style="color: #f6c23e"></i> Atenção
              </span>
              <span class="mr-2">
                <i class="fas fa-circle" style="color: #1cc88a"></i> Normal
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <!-- Area Chart -->
      <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
          <!-- Card Header - Dropdown -->
          <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Localidades</h6>
            <div class="dropdown no-arrow">
            </div>
          </div>
          <!-- Card Body -->
          <div class="card-body">
            <div class="chart-area">
              <div id="google-maps"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
  <!-- /.container-fluid -->

  </div>
  <!-- End of Main Content -->

  <% include Shared/footer %>



  <% include Shared/calljs %>
  <script src="../javascripts/maps.js"></script>

</body>

</html>